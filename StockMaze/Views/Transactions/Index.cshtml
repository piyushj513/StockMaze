@model IEnumerable<StockMaze.Models.Transaction>

@{
    ViewData["Title"] = "Index";
    int intsno=0;
}

<h2 class="text-center">Transactions</h2>
<div class="text-center p-2">
	<form asp-controller="Transactions" asp-action="Index" method="get">
		<span style="padding-top:70px;" class="btn-group">
			<input class="form-control mr-sm-2" name="SearchText" type="search" placeholder="Product Name" aria-label="Search">
            <button style="background-color:#a47343;color:white;"class="btn my-2 my-sm-0" type="submit">Search</button>
		</span>
	</form>
</div>
<div style="padding-top:20px;margin-right:500px;" class="row text-center">
	<div class="col-md-8 offset-md-2">
		<table style="border : 1px solid black; padding : 40px;" class="table table-hover">
        <thead style="background-color:#a47343;color:white;">
        <tr style="text-align:center;">
            <th>S.no</th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionInvoiceRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryInUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryOutUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryBalUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCostPricePU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductSellingPricePU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvBalCostPriceTotal)
            </th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    intsno = intsno + 1;
        <tr>
            <td>@intsno</td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionInvoiceRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryInUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryOutUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryBalUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCostPricePU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSellingPricePU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvBalCostPriceTotal)
            </td>
            <td>
				<div class="btn-group">
				<a class="btn btn-sm btn-outline-primary" style="margin-right:16px" asp-action="Edit" asp-route-id="@item.transactionId"><i class="bi bi-pencil-square"></i>Edit</a>
				<a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.transactionId"><i class="bi bi-eye"></i>Details</a>
				<a class="btn btn-sm btn-outline-danger" style="margin-left:16px"asp-action="Delete" asp-route-id="@item.transactionId"><i class="bi bi-trash"></i>Delete</a>
				</div>
				</td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
<div style="position:fixed; right:50px; bottom:100px;" class="text-white">
	<a class="btn btn-success " asp-controller="transactions" asp-action="Create"><i class="bi bi-plus-circle"></i>Create</a>
</div>
